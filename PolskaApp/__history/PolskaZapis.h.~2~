#endif

using namespace std;

struct PolskaZapis
{
	String note;
	String polskNote;

	String convert()
	{
		List<char> symbol;

		/*for(int i = 1; i < note.Length(); i++)
		{
			if (note[i] == ' ')
			{
				note.Delete(i, 1);
			}
        }
           */

		int check = 0;
		for (int i = 1, f = 1; i < note.Length(); i++)
		{
			if(isdigit(note[i]) || note[i] == ',')
			{
				polskNote.Insert(note[i],f);
				f++;
				check = 1;
			}
			else if(check == 1)
			{
				polskNote.Insert(" ",f);
				f++;
				check == 0;
			}
		}

		return polskNote;
	}
};